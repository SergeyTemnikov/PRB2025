<Window x:Class="prb_session2_first_try.Windows.ModalWorkerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prb_session2_first_try.Windows"
        mc:Ignorable="d"
        Title="ModalWorkerDialog" Height="450" Width="800" ResizeMode="NoResize"
        WindowStyle="None">
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>

        <Grid Name="gridInfo" Grid.Row="1" Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            
            <!--ФИО-->
            <TextBlock Grid.Row="0" Grid.Column="0" Margin="5" Text="ФИО:" TextAlignment="Center" VerticalAlignment="Center" FontSize="14"></TextBlock>
            <TextBox Name="txbFullName" Grid.Row="0" Grid.Column="1" Margin="5"></TextBox>

            <!--Должность-->
            <TextBlock Grid.Row="1" Grid.Column="0" Margin="5" Text="Должность:" TextAlignment="Center" VerticalAlignment="Center" FontSize="14"></TextBlock>
            <ComboBox Name="cmbPosition" Grid.Row="1" Grid.Column="1" Margin="5"></ComboBox>

            <!--Кабинет-->
            <TextBlock Grid.Row="2" Grid.Column="0" Margin="5" Text="Кабинет:" TextAlignment="Center" VerticalAlignment="Center" FontSize="14"></TextBlock>
            <ComboBox Name="cmbCabinet" Grid.Row="2" Grid.Column="1" Margin="5"></ComboBox>

            <!--Отдел-->
            <TextBlock Grid.Row="3" Grid.Column="0" Margin="5" Text="Отдел:" TextAlignment="Center" VerticalAlignment="Center" FontSize="14"></TextBlock>
            <ComboBox Name="cmbDepartament" Grid.Row="3" Grid.Column="1" Margin="5"></ComboBox>

            <!--Email-->
            <TextBlock Grid.Row="4" Grid.Column="0" Margin="5" Text="Email:" TextAlignment="Center" VerticalAlignment="Center" FontSize="14"></TextBlock>
            <TextBox Name="txbEmail" Grid.Row="4" Grid.Column="1" Margin="5"></TextBox>

            <!--Рабочий телефон-->
            <TextBlock Grid.Row="5" Grid.Column="0" Margin="5" Text="Рабочий номер:" TextAlignment="Center" VerticalAlignment="Center" FontSize="14"></TextBlock>
            <TextBox Name="txbWorkPhoneNumber" Grid.Row="5" Grid.Column="1" Margin="5"></TextBox>

            <!--Личный телефон-->
            <TextBlock Grid.Row="6" Grid.Column="0" Margin="5" Text="Личный номер:" TextAlignment="Center" VerticalAlignment="Center" FontSize="14"></TextBlock>
            <TextBox Name="txbPrivatePhoneNumber" Grid.Row="6" Grid.Column="1" Margin="5"></TextBox>

            <!--Дата рождения-->
            <TextBlock Grid.Row="7" Grid.Column="0" Margin="5" Text="Дата рождения:" TextAlignment="Center" VerticalAlignment="Center" FontSize="14"></TextBlock>
            <DatePicker Name="dpBirthday" Grid.Row="7" Grid.Column="1" Margin="5"></DatePicker>

            <!--Наставник-->
            <TextBlock Grid.Row="8" Grid.Column="0" Margin="5" Text="Наставник:" TextAlignment="Center" VerticalAlignment="Center" FontSize="14"></TextBlock>
            <ComboBox Name="cmbLeader" Grid.Row="8" Grid.Column="1" Margin="5"></ComboBox>

            <!--Помощник-->
            <TextBlock Grid.Row="9" Grid.Column="0" Margin="5" Text="Помощник:" TextAlignment="Center" VerticalAlignment="Center" FontSize="14"></TextBlock>
            <ComboBox Name="cmbHelper" Grid.Row="9" Grid.Column="1" Margin="5"></ComboBox>

            <Button Grid.Row="10" Grid.Column="0" Margin="5" Width="25" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Content="E" Visibility="Collapsed"></Button>

            <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Margin="40 0 0 0" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button VerticalAlignment="Center" Content="Добавить" Margin="5" Width="100" Height="25" Visibility="Collapsed"></Button>
                <Button VerticalAlignment="Center" Content="Изменить" Margin="5" Width="100" Height="25" Visibility="Collapsed"></Button>
                <Button VerticalAlignment="Center" Content="Уволить" Margin="5" Width="100" Height="25" Visibility="Collapsed"></Button>
                <Button VerticalAlignment="Center" Content="Отменить" Margin="5" Width="100" Height="25" Visibility="Collapsed"></Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="3" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Height="30" Width="100" Margin="5" Content="Прошедшие"></Button>
                <Button Height="30" Width="100" Margin="5" Content="Текущие"></Button>
                <Button Height="30" Width="100" Margin="5" Content="Будущие"></Button>
            </StackPanel>

            <TreeView Name="treeCalendar" Grid.Row="1">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Path=Days}">
                        <TextBlock Text="{Binding Name}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

        </Grid>
    </Grid>
</Window>
